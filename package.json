{
  "name": "@whatisboom/boom-ui",
  "version": "0.5.0",
  "description": "Comprehensive React component library for consistent branding",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./form": {
      "import": "./dist/form.js",
      "types": "./dist/form.d.ts"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "prepare": "node -e \"if (process.env.CI !== 'true') require('child_process').execSync('husky')\"",
    "dev": "vite build --watch",
    "dev:mf": "vite --config vite.mf.config.ts",
    "build:base": "tsc && vite build",
    "build": "./scripts/build-strict.sh",
    "build:mf": "vite build --config vite.mf.config.ts",
    "test": "vitest",
    "test:ci": "./scripts/test-strict.sh",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run typecheck && npm run test:ci && npm run build"
  },
  "peerDependencies": {
    "@hookform/resolvers": "^5.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.49.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@hookform/resolvers": "^5.2.2",
    "@originjs/vite-plugin-federation": "^1.3.5",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/react": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "10.1.10",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "playwright": "^1.57.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.49.2",
    "storybook": "^10.1.10",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^4.0.16",
    "vitest-axe": "^0.1.0",
    "wcag-contrast": "^3.0.0",
    "zod": "^4.2.1"
  },
  "dependencies": {
    "@storybook-community/storybook-dark-mode": "^7.1.0",
    "framer-motion": "^12.23.26"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "typescript",
    "accessibility",
    "a11y"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whatisboom/boom-ui.git"
  }
}
